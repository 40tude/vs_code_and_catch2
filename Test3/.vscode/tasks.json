{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "CMake",
            // "args": [
            //     "../",
            //     "-G",
            //     "NMake Makefiles"
            // ]
            
            // Below is shown how to CMAKE_BUILD_TYPE variable because makefiles generated by CMake are single-configuration.
            "args": [
                "../",
                "-G",
                "NMake Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
     ]
}